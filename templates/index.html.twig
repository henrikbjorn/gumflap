<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <title>Gumflap</title>

    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="http://js.pusher.com/1.12/pusher.min.js"></script>
    <script>
        var pusher = new Pusher('{{ attribute(pusher, 'pusher.key') }}');
        var channel = pusher.subscribe('gumflap');

        channel.bind('message', function (message) {
            $('#messages').append($('<p />', {
                'text' : message
            }))
        });
    </script>

    <script>
        $(document).ready(function() {
            $('form').submit(function (e) {
                e.preventDefault();

                var form = $(e.currentTarget);

                $.post('/index.php/message', form.serialize(), function (data) {
                    $('textarea', form).val('');
                });

            });
        });
    </script>

    <style>
        #messages p{background-color:#eee;margin:0;padding:5px 5px 0px;border-bottom:1px dashed #000}
        #messages p:nth-child(2n){background-color:#fff;}
    </style>
</head>

<body>

<h1>Gumflap</h1>

<h2>Messages</h2>
<div id="messages"></div>

<h2>Write your message</h2>
<form action="/index.php/message" method="post">
    <textarea name="message"></textarea>

    <button type="submit">Send</button>
</form>

</body>
</html>
